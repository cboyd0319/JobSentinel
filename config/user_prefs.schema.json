{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/cboyd0319/JobSentinel/config/user_prefs.schema.json",
  "title": "JobSentinel User Preferences",
  "description": "Configuration schema for JobSentinel job search automation",
  "type": "object",
  "required": ["companies", "title_allowlist"],
  "properties": {
    "companies": {
      "type": "array",
      "description": "List of company job boards to scrape",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "board_type", "url"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the company"
          },
          "board_type": {
            "type": "string",
            "description": "Type of job board platform",
            "enum": ["greenhouse", "lever", "generic_js", "ashby", "workable"]
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "URL of the company's job board"
          }
        }
      }
    },
    "title_allowlist": {
      "type": "array",
      "description": "Job titles to match (case-insensitive substring match)",
      "items": {
        "type": "string"
      }
    },
    "title_blocklist": {
      "type": "array",
      "description": "Job titles to exclude (case-insensitive substring match)",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "keywords_boost": {
      "type": "array",
      "description": "Keywords that increase job score when present",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "keywords_exclude": {
      "type": "array",
      "description": "Keywords that automatically exclude a job",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "location_preferences": {
      "type": "object",
      "description": "Location filtering preferences",
      "default": {},
      "properties": {
        "allow_remote": {
          "type": "boolean",
          "default": true
        },
        "allow_hybrid": {
          "type": "boolean",
          "default": true
        },
        "allow_onsite": {
          "type": "boolean",
          "default": true
        },
        "cities": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          }
        },
        "states": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          }
        },
        "country": {
          "type": "string",
          "default": "US"
        }
      }
    },
    "salary_floor_usd": {
      "type": "number",
      "description": "Minimum salary in USD (0 for no minimum)",
      "default": 0,
      "minimum": 0
    },
    "immediate_alert_threshold": {
      "type": "number",
      "description": "Score threshold (0-1) for immediate Slack alerts",
      "default": 0.9,
      "minimum": 0,
      "maximum": 1
    },
    "digest_min_score": {
      "type": "number",
      "description": "Minimum score (0-1) to include in daily digest",
      "default": 0.7,
      "minimum": 0,
      "maximum": 1
    },
    "max_companies_per_run": {
      "type": "integer",
      "description": "Maximum number of companies to scrape per run",
      "default": 15,
      "minimum": 1
    },
    "fetch_descriptions": {
      "type": "boolean",
      "description": "Whether to fetch full job descriptions",
      "default": true
    },
    "use_llm": {
      "type": "boolean",
      "description": "Enable LLM-based job analysis",
      "default": false
    },
    "llm_weight": {
      "type": "number",
      "description": "Weight of LLM score in overall scoring (0-1)",
      "default": 0.5,
      "minimum": 0,
      "maximum": 1
    },
    "mcp_servers": {
      "type": "object",
      "description": "MCP server configuration for job aggregators",
      "default": {},
      "properties": {
        "jobswithgpt": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "priority": {
              "type": "integer",
              "default": 1,
              "minimum": 1
            },
            "description": {
              "type": "string"
            }
          }
        },
        "reed": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "api_key_env_var": {
              "type": "string",
              "default": "REED_API_KEY"
            },
            "priority": {
              "type": "integer",
              "default": 2,
              "minimum": 1
            },
            "description": {
              "type": "string"
            },
            "default_distance_miles": {
              "type": "integer",
              "default": 10,
              "minimum": 1
            },
            "default_results": {
              "type": "integer",
              "default": 100,
              "minimum": 1
            }
          }
        },
        "jobspy": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "server_path": {
              "type": ["string", "null"],
              "default": null
            },
            "priority": {
              "type": "integer",
              "default": 3,
              "minimum": 1
            },
            "description": {
              "type": "string"
            },
            "default_sites": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": ["indeed", "zip_recruiter", "glassdoor", "google"]
            },
            "exclude_linkedin": {
              "type": "boolean",
              "default": true
            },
            "results_per_site": {
              "type": "integer",
              "default": 50,
              "minimum": 1
            },
            "hours_old": {
              "type": "integer",
              "default": 72,
              "minimum": 1
            }
          }
        }
      }
    }
  }
}
