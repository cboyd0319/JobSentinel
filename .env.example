# Database Configuration
# SQLite-first architecture for privacy and zero-admin deployment
# Default: Local SQLite (no installation required, perfect for personal use)
# SQLite: Requires ZERO admin rights, 100% private, single-file database
DATABASE_URL=sqlite+aiosqlite:///data/jobs.sqlite
#
# Optional: PostgreSQL for advanced use cases (multi-user, cloud, teams)
# Requires: PostgreSQL 15+ installed and 'pip install -e .[postgres]'
# DATABASE_URL=postgresql+asyncpg://jobsentinel:jobsentinel@localhost:5432/jobsentinel
# DB_POOL_SIZE=10
# DB_POOL_MAX_OVERFLOW=5
# DB_POOL_PRE_PING=true

# Timezone for logging and scheduling
TZ=America/Denver

# Slack Incoming Webhook URL for immediate alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ

# SMTP settings for daily digest emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_app_password # Use an app-specific password for services like Gmail
DIGEST_TO=recipient_email@example.com

# Optional: ChatGPT API integration for AI-enhanced scoring
# Uncomment and configure to enable AI features
# LLM_ENABLED=true
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_MODEL=gpt-4o-mini
# LLM_TEMPERATURE=0.0
# LLM_MAX_TOKENS=500
# LLM_MAX_DAILY_TOKENS=50000
# LLM_MAX_RPM=20
# LLM_FALLBACK_TO_RULES=true

# Logging and cleanup settings
LOG_LEVEL=INFO
CLEANUP_DAYS=90

# Security scanning API keys
# Safety API key for enhanced vulnerability scanning
# Get your API key from: https://pyup.io/
SAFETY_API_KEY=your_safety_api_key_here
