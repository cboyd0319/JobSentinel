{
  "manifest_version": 3,
  "name": "JobSentinel - Job Tracker & Scorer",
  "version": "1.0.0",
  "description": "AI-powered job tracking extension. Score jobs instantly, save to desktop app, and never miss great opportunities.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://boards.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://jobs.lever.co/*",
    "https://*.myworkdayjobs.com/*",
    "https://www.indeed.com/*",
    "https://www.linkedin.com/jobs/*",
    "https://*.icims.com/*",
    "https://*.bamboohr.com/*",
    "https://jobs.ashbyhq.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://boards.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://jobs.lever.co/*",
        "https://*.myworkdayjobs.com/*",
        "https://www.indeed.com/*",
        "https://www.linkedin.com/jobs/*",
        "https://*.icims.com/*",
        "https://*.bamboohr.com/*",
        "https://jobs.ashbyhq.com/*"
      ],
      "js": [
        "scripts/job-detector.js",
        "scripts/scoring-overlay.js",
        "scripts/content-script.js"
      ],
      "css": [
        "styles/overlay.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
