<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="600" Width="650"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F9FAFB">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Your Job Preferences" FontSize="28" FontWeight="Bold" Foreground="#1F2937"/>

        <StackPanel Grid.Row="1" Margin="0,25,0,0">
            <TextBlock Text="What job titles are you looking for?" FontSize="18" FontWeight="SemiBold" Foreground="#1F2937"/>
            <TextBlock Text="(Enter each title on a new line. e.g., Accountant, Sales Manager)" FontSize="14" Foreground="#6B7280" Margin="0,5,0,5"/>
            <TextBox x:Name="TitlesBox" Margin="0,5,0,25" Height="120" FontSize="16" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" BorderBrush="#D1D5DB" BorderThickness="1"/>

            <TextBlock Text="Which company career pages should I check?" FontSize="18" FontWeight="SemiBold" Foreground="#1F2937"/>
            <TextBlock Text="(Enter each URL on a new line. Must start with https://)" FontSize="14" Foreground="#6B7280" Margin="0,5,0,5"/>
            <TextBox x:Name="UrlsBox" Margin="0,5,0,0" Height="120" FontSize="16" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" BorderBrush="#D1D5DB" BorderThickness="1"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SaveButton" Content="Save Preferences" FontSize="20" FontWeight="Bold" Padding="15,12" MinHeight="50" Background="#22C55E" Foreground="#FFFFFF" BorderThickness="0"/>
            <Button x:Name="CancelButton" Content="Cancel" FontSize="18" Margin="15,0,0,0" Padding="15,12" MinHeight="50"/>
        </StackPanel>
    </Grid>
</Window>
