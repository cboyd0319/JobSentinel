<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Job Finder" Height="700" Width="950"
        WindowStartupLocation="CenterScreen" Background="#F9FAFB">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="My Job Finder" FontSize="32" FontWeight="Bold" Foreground="#1F2937"/>
            <TextBlock x:Name="StatusText" Text="Last checked: Never" Margin="0,8,0,0" FontSize="18" Foreground="#6B7280"/>
        </StackPanel>

        <!-- Main Content: Job List -->
        <ListView x:Name="JobsList" Grid.Row="1" Margin="0,25,0,0" BorderThickness="1" BorderBrush="#E5E7EB" FontSize="16" HorizontalContentAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Job Title" Width="400">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Hyperlink NavigateUri="{Binding Url}" RequestNavigate="OnHyperlinkRequestNavigate">
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                    </Hyperlink>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Company" DisplayMemberBinding="{Binding Company}" Width="200"/>
                    <GridViewColumn Header="Score" DisplayMemberBinding="{Binding Score}" Width="120"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding DiscoveredDate}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Footer: Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,25,0,0">
            <Button x:Name="RunButton" Content="Check for New Jobs" FontSize="24" FontWeight="Bold" Padding="20,15" MinHeight="65" MinWidth="300" Background="#4C8BF5" Foreground="#FFFFFF" BorderThickness="0"/>
            <Button x:Name="SettingsButton" Content="Settings" FontSize="22" Padding="15,15" MinHeight="65" Margin="20,0,0,0" Background="#6B7280" Foreground="#FFFFFF" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
