{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JobSentinel",
  "version": "1.0.0",
  "identifier": "com.jobsentinel.main",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "dmg", "app"],
    "icon": [
      "icons/icon.png"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      },
      "nsis": null
    }
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://hooks.slack.com https://boards.greenhouse.io https://boards-api.greenhouse.io https://jobs.lever.co https://api.lever.co https://api.jobswithgpt.com; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    },
    "windows": [
      {
        "label": "main",
        "title": "JobSentinel",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": false,
        "center": true,
        "skipTaskbar": false
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
