{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JobSentinel",
  "version": "1.0.0",
  "identifier": "com.jobsentinel.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      },
      "nsis": null
    }
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://greenhouse.io https://jobs.lever.co https://api.jobswithgpt.com; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    },
    "windows": [
      {
        "title": "JobSentinel",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "decorations": true,
        "alwaysOnTop": false,
        "center": true,
        "skipTaskbar": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false,
      "tooltip": "JobSentinel - Job Search Automation"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
